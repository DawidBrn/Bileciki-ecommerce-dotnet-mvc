@using Bileciki_ecommerce.Models.ViewModels;
@model ShoppingCartVM

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h3> Your shopping cart</h3>

        </div>
        <table class="table">
            <thead>
                <tr>
                    <th> Selected amount</th>
                    <th>
                        Movie
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Subtotal
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Movie.Price.ToString()</td>
                        <td class="align-middle">@((item.Amount*item.Movie.Price).ToString())</td>
                        <td class="align-middle">
                            <a class="text-center" asp-controller="Orders" asp-action="RemoveItem"
                            asp-route-id=@item.Movie.Id>Remove</a> |
                            <a class="text-center" asp-controller="Orders" asp-action="AddItem"
                            asp-route-id=@item.Movie.Id>Add</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">

                    </td>
                    <td>
                        Total: 
                    </td>
                    <td>
                        @Model.ShoppingCartTotal.ToString();
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Movies" asp-action="Index">Add more</a>
            </div>
        </div>
    </div>
</div>