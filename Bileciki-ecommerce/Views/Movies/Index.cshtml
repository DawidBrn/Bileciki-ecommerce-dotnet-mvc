@model IEnumerable<Bileciki_ecommerce.Models.Movie>
@{
    ViewData["Title"] = "List of movies";
}

<div class="row " >
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-2" >
           <div class="card mb-2" style="max-width: 600px;">
               <div class="row g-0">
                   <div class="col-md-12">
                      <div class="card-header text-white bg-info">
                          <p class="card-text">
                              <h5 class="card-title">
                                   @item.Name
                              <a class="text-white float-right"></a>
                              </h5>
                             
                          </p>
                       </div>

                       <div class="col-md-6">
                           <img src="@item.ImageURL" width="100%" alt="@item.Name">
                       </div>
                       <div class="col-md-6">
                           <div class="card-body">
                               <p class="card-text">@item.Description</p>
                               <p class="card-text"><b> Cinema: </b> @item.Cinema.Name</p>
                                <p class="card-text"><b> Category: </b> @item.MovieCategory</p>
                                <p class="card-text"><b> Start date: </b> @item.StartDate.ToString("dd MMM yy")</p>
                                <p class="card-text"><b> End date: </b> @item.EndDate.ToString("dd MMM yy")</p>
                                <p class="card-text">
                                <b>Status : </b> @if(DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate) { <span>
                                    AVAILBLE
                                        </span>
                                    }
                                    else if(DateTime.Now > item.EndDate)
                                    {
                                        <span>UNAVAILBE</span>
                                    }
                                    else
                                    {
                                        <span>SOON</span>
                                    }
                                </p>
                           </div>

                       </div>
                       <div class="col-md-12">
                           <div class="card-footer">
                               <p class="card-text">
                                   <a class="btn btn-outline-primary float-right">Show details</a>
                                   <a class="btn btn-success text-white">Add to cart (@item.Price)</a>

                               </p>
                           </div>
                       </div>
               </div>
               </div>

       </div>
     </div>
    }
    
</div>

