@model Movie
@{
    ViewData["Title"] = "List of movies";
}

<div class="row " >
    
    
        <div class="col-md-8 offset-2" >
           <div class="card mb-2" style="max-width: 600px;">
               <div class="row g-0">
                   <div class="col-md-12">
                      <div class="card-header text-white bg-info">
                          <p class="card-text">
                              <h5 class="card-title">
                                   @Model.Name
                              <a class="text-white float-right"></a>
                              </h5>
                             
                          </p>
                       </div>

                       <div class="col-md-4">
                           <img src="@Model.ImageURL" style="max-width: 100%;"  alt="@Model.Name">
                       </div>
                       <div class="col-md-8">
                           <div class="card-body">
                               <p class="card-text">@Model.Description</p>
                               <p class="card-text"><b> Cinema: </b> @Model.Cinema.Name</p>
                                <p class="card-text"><b> Category: </b> @Model.MovieCategory</p>
                                <p class="card-text"><b> Start date: </b> @Model.StartDate.ToString("dd MMM yy")</p>
                                <p class="card-text"><b> End date: </b> @Model.EndDate.ToString("dd MMM yy")</p>
                                <p class="card-text">
                                <b>Status : </b> @if(DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate) { <span>
                                    AVAILBLE
                                        </span>
                                    }
                                    else if(DateTime.Now > Model.EndDate)
                                    {
                                        <span>UNAVAILBE</span>
                                    }
                                    else
                                    {
                                        <span>SOON</span>
                                    }
                                </p>
                                <p class="card-text">
                                    <b> Actors:</b>
                                    <hr />
                                    <div class="row">
                                        @foreach(var actor in Model.Actors_Movies)
                                    {
                                        <div class="flex-column text-center">
                                            <img class="border-info rounder-circle" src="@actor.Actor.ProfilePictureURL" style="max-width: 150px;"/>
                                            <br /><a> @actor.Actor.Fullname</a>
                                            </div>
                                    }
                                </div>

                                </p>

                           </div>

                       </div>
                       <div class="col-md-12">
                           <div class="card-footer">
                               <p class="card-text">
                                   <a asp-action="Index" class="btn btn-outline-primary float-right">Go bakc</a>
                                   <a asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@Model.Id" class="btn btn-success text-white">Add to cart (@Model.Price)</a>

                               </p>
                           </div>
                       </div>
               </div>
               </div>

       </div>
     </div>
    
    
</div>

